.container {
  min-height: 100vh;
  background-color: #f7f8f9;
  padding: 16px;
}

/* 未登录状态 */
.unlogin-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40px;
  padding-bottom: 24px;
}

.avatar-box {
  margin-bottom: 24px;
}

.avatar-bg {
  width: 100px;
  height: 100px;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-icon {
  width: 100px;
  height: 100px;
  opacity: 0.6;
  border-radius: 20px;
}

.unlogin-title {
  font-size: 22px;
  font-weight: 600;
  color: #323233;
  margin-bottom: 32px;
}

.login-btn {
  width: 280px;
  height: 48px;
  background-color: #13EC5B;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.login-btn-icon {
  font-size: 18px;
  color: #ffffff;
}

.login-btn-text {
  font-size: 16px;
  font-weight: 500;
  color: #ffffff;
}

/* 已登录状态 */
.logged-in-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20px;
  padding-bottom: 24px;
}

.logged-in-section .avatar-bg {
  width: 100px;
  height: 100px;
  border-radius: 20px;
}

.logged-avatar {
  width: 100px;
  height: 100px;
  opacity: 1;
  border-radius: 20px;
}

.user-name {
  font-size: 22px;
  font-weight: 600;
  color: #323233;
  margin-bottom: 8px;
}

.join-date {
  font-size: 14px;
  color: #969799;
  margin-bottom: 24px;
}

/* 统计卡片行 */
.stats-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  padding: 0 8px;
  box-sizing: border-box;
}

.stat-card {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 12px;
  padding: 16px 8px;
  margin: 0 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-card.highlight {
  background-color: #e8f8ef;
}

.stat-num {
  font-size: 24px;
  font-weight: 700;
  color: #323233;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 12px;
  color: #666666;
}

/* 分区标题 */
.section-title {
  font-size: 14px;
  color: #a6b2c4;
  margin: 24px 0 12px 4px;
}

/* 功能菜单 */
.menu-list {
  background-color: #ffffff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon-wrapper {
  width: 40px;
  height: 40px;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.menu-icon-wrapper.green {
  background-color: #13EC5B;
}

.menu-icon-text {
  font-size: 18px;
  color: #ffffff;
}

.menu-text {
  flex: 1;
  font-size: 15px;
  color: #323233;
  font-weight: 500;
}

.menu-arrow {
  font-size: 18px;
  color: #c8c9cc;
}

/* 登录确认弹窗 */
.login-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.login-popup.show {
  opacity: 1;
  visibility: visible;
}

.login-popup-content {
  background-color: #ffffff;
  border-radius: 20px 20px 0 0;
  padding: 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.login-popup.show .login-popup-content {
  transform: translateY(0);
}

.login-popup-header {
  display: flex;
  align-items: center;
  padding: 20px 20px 12px;
}

.login-popup-app-icon {
  width: 32px;
  height: 32px;
  border-radius: 8px;
  margin-right: 10px;
}

.login-popup-app-name {
  font-size: 16px;
  color: #323233;
  font-weight: 500;
}

.login-popup-title {
  font-size: 18px;
  font-weight: 600;
  color: #323233;
  padding: 0 20px 8px;
}

.login-popup-desc {
  font-size: 14px;
  color: #969799;
  padding: 0 20px 20px;
}

.login-popup-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16px 20px;
}

.login-popup-avatar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 0;
  margin-bottom: 16px;
}

.login-popup-avatar-btn::after {
  border: none;
}

.login-popup-avatar {
  width: 100px;
  height: 100px;
  border-radius: 20px;
  margin-bottom: 8px;
}

.login-popup-avatar-tip {
  font-size: 12px;
  color: #969799;
}

.login-popup-input {
  width: 100%;
  height: 44px;
  line-height: 44px;
  padding: 0 16px;
  background-color: #f7f8f9;
  border-radius: 8px;
  font-size: 16px;
  color: #323233;
  box-sizing: border-box;
}

.login-popup-btns {
  display: flex;
  flex-direction: column;
  gap: 6px;
  padding: 8px 20px 16px;
}

.login-popup-btn {
  height: 48px;
  line-height: 48px;
  text-align: center;
  border-radius: 8px;
  font-size: 16px;
}

.login-popup-btn.cancel {
  background-color: #f5f5f5;
  color: #323233;
}

.login-popup-btn.confirm {
  background-color: #13EC5B;
  color: #ffffff;
}
