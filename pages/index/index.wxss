/* ==================== 公共样式 ==================== */

/* 空状态提示 */
.empty-tip {
  text-align: center;
  color: #969799;
  padding: 40px 0;
}

/* 操作按钮 */
.action-btn {
  width: 60px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 14px;
}

.action-btn-edit {
  background-color: #1989fa;
}

.action-btn-delete {
  background-color: #ff4d4f;
}

/* 优先级条 */
.importance-bar {
  width: 4px;
  height: 24px;
  border-radius: 2px;
  margin-right: 12px;
  flex-shrink: 0;
}

.importance-bar-low {
  background-color: #ffb300;
}

.importance-bar-medium {
  background-color: #f57c00;
}

.importance-bar-high {
  background-color: #d32f2f;
}

/* 待办标题 */
.todo-title {
  color: #323233;
}

.todo-title-completed {
  color: #07c160;
  text-decoration: line-through;
}

.todo-title-abandoned {
  color: #969799;
  text-decoration: line-through;
}

/* 展开箭头 */
.expand-arrow {
  font-size: 12px;
  color: #969799;
  transition: transform 0.3s ease;
  margin-left: 8px;
}

.expand-arrow-expanded {
  transform: rotate(180deg);
}

/* 展开内容区域 */
.collapse-content {
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: max-height 0.3s ease, padding 0.3s ease, opacity 0.3s ease;
  background-color: #f7f8f9;
  padding: 0 16px;
}

.collapse-content-expanded {
  max-height: 500px;
  padding: 12px 16px;
  opacity: 1;
}

/* 详情文字 */
.detail-text {
  font-size: 14px;
  color: #323233;
  line-height: 1.5;
}

.detail-text-empty {
  color: #969799;
}

/* 状态标签 */
.status-tag {
  font-size: 12px;
  color: #07c160;
  margin-left: 8px;
  padding: 2px 6px;
  background-color: #e6f7ed;
  border-radius: 4px;
}

.status-tag-abandoned {
  color: #969799;
  background-color: #ebedf0;
}

/* ==================== 页面特定样式 ==================== */

/* 导航栏按钮 */
.clear-btn {
  font-size: 14px;
  color: #ff4d4f;
  padding: 8px 12px;
}

/* ==================== 待办列表样式 ==================== */

.todo-collapse-list {
  display: flex;
  flex-direction: column;
}

.todo-wrapper {
  background-color: transparent;
}

.todo-wrapper.has-border {
  border-bottom: 1px solid #ebedf0;
}

.todo-header {
  flex: 1;
}

.todo-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.expand-arrow {
  font-size: 12px;
  color: #969799;
  transition: transform 0.3s ease;
  margin-left: 8px;
  text-decoration: none !important;
  display: flex;
  align-items: center;
  height: 100%;
}

.expand-arrow.expanded {
  transform: rotate(180deg);
}

.todo-collapse-content {
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: max-height 0.3s ease, padding 0.3s ease, opacity 0.3s ease;
  background-color: #f7f8f9;
  padding: 0 16px;
}

.todo-collapse-content.expanded {
  max-height: 500px;
  padding: 12px 16px;
  opacity: 1;
}

.todo-detail {
  font-size: 14px;
  color: #323233;
  line-height: 1.5;
}

.todo-detail.empty {
  color: #969799;
}

.todo-item {
  display: flex;
  align-items: center;
  background-color: transparent;
  height: 48px;
  padding: 0 12px;
}

.importance-bar {
  width: 4px;
  height: 24px;
  border-radius: 2px;
  margin-right: 12px;
  flex-shrink: 0;
}

.importance-bar.importance-1 {
  background-color: #ffb300;
}

.importance-bar.importance-2 {
  background-color: #f57c00;
}

.importance-bar.importance-3 {
  background-color: #d32f2f;
}

.todo-title {
  color: #323233;
}

.todo-title-completed {
  color: #07c160;
  text-decoration: line-through;
}

/* 放弃的待办样式 */
.todo-title-abandoned {
  color: #969799;
  text-decoration: line-through;
}

/* 状态标签 */
.todo-status {
  font-size: 12px;
  color: #07c160;
  margin-left: 8px;
  padding: 2px 6px;
  background-color: #e6f7ed;
  border-radius: 4px;
}

.todo-status.abandoned {
  color: #969799;
  background-color: #ebedf0;
}

.swipe-right-actions {
  display: flex;
  align-items: center;
  height: 100%;
}

.action-btn {
  width: 60px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 14px;
}

.swipe-right-actions .action-btn.edit {
