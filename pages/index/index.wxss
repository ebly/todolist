}

.swipe-right-actions .action-btn.delete {
  background-color: #ff4d4f;
}

/* ==================== 进度条和剩余天数样式 ==================== */

.todo-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  overflow: hidden;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  min-height: 48px;
}

/* 背景进度条 */
.todo-bg-progress {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 24px;
  transform: translateY(-50%);
  background-color: #f5f5f5;
  border-radius: 2px;
  overflow: hidden;
  z-index: 0;
}

.todo-bg-progress-fill {
  height: 100%;
  opacity: 1;
  transition: width 0.3s ease;
}

/* 低重要性 - 黄色 */
.todo-bg-progress-fill.importance-low {
  background-color: #ffb300;
}

/* 中重要性 - 橙色 */
.todo-bg-progress-fill.importance-medium {
  background-color: #f57c00;
}

/* 高重要性 - 红色 */
.todo-bg-progress-fill.importance-high {
  background-color: #d32f2f;
}

/* 待办标题 - 垂直居中 */
.todo-header-center {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 24px;
  gap: 16rpx;
}

.todo-header-center .todo-title {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.todo-right-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

/* 天数标签 */
.days-badge {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
  background-color: #e6f7ed;
  color: #07c160;
}

.days-badge.urgent {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.days-badge.warning {
  background-color: #fff7e6;
  color: #ff8c00;
}

.days-badge.completed {
  background-color: #e6f7ed;
  color: #07c160;
}

.days-badge.abandoned {
  background-color: #f5f5f5;
  color: #969799;
}
